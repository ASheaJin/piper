<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.syswin.pipeline.db.repository.TransactionRepository">
    <resultMap id="BaseResultMap" type="com.syswin.pipeline.db.model.Transaction">
        <id column="transaction_id" jdbcType="VARCHAR" property="transactionId"/>
        <result column="user_id" jdbcType="VARCHAR" property="userId"/>
        <result column="money" jdbcType="DECIMAL" property="money"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
        <result column="type" jdbcType="TINYINT" property="type"/>
        <result column="create_time" jdbcType="INTEGER" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
    transaction_id, user_id, money, type, status, create_time
  </sql>
    <insert id="insert">
    insert into transaction_record
        (
        transaction_id,
        user_id,
        money,
        status,
        type,
        create_time
        ) values (
        #{transactionId},
        #{userId},
        #{money},
        #{status},
        #{type},
        #{createTime}
        )
    </insert>

    <update id="updateTransactionStatus">
        update transaction_record
        set status = {status}
        where transaction_id = #{transactionId,jdbcType=BIGINT}
    </update>


    <select id="select" resultType="com.syswin.pipeline.db.model.Transaction">
        select
        <include refid="Base_Column_List"/>
        from transaction_record
    </select>
    <select id="selectById" resultType="com.syswin.pipeline.db.model.Transaction">
        select
        <include refid="Base_Column_List"/>
        from transaction_record where user_id = #{userId}
    </select>

    <select id="selectbyLimit" resultType="com.syswin.pipeline.db.model.Transaction">
        select
        <include refid="Base_Column_List"/>
        from transaction_record limit #{start},#{end}
    </select>

    <select id="selectByIdTypeTime" resultType="com.syswin.pipeline.db.model.Transaction">
        select
        <include refid="Base_Column_List"/>
        from transaction_record
        where
        1=1
        <if test="type != 0">
            and type = #{type}
        </if>
        <if test="userId != ''">
            and user_id = #{userId}
        </if>
        <if test="startTime != 0">
            and create_time > #{startTime}
        </if>
        <if test="endTime != 0">
            and #{endTime} > create_time
        </if>
        <if test="end != 0">
            limit #{start},#{end}
        </if>
    </select>

    <select id="getCount" resultType="java.lang.Integer">
        select
        count(1)
        from transaction_record
    </select>

    <delete id="delete">
       delete from transaction_record  where transaction_id = #{id}
  </delete>
</mapper>